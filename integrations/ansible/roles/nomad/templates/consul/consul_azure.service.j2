[Unit]
Description=Consul Agent
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
Environment=CONSUL_ALLOW_PRIVILEGED_PORTS=true
ExecStart={{CONSULDIR}}/consul agent -config-dir=/etc/consul.d -log-file={{CONSULDIR}}/consul.log -dns-port=53 -recursor=168.63.129.16
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM
User={{consul_service_user}}
Group={{consul_service_group}}

[Install]
WantedBy=multi-user.target
