data_dir = "{{NOMAD_DATA_DIR}}"
bind_addr = "0.0.0.0"

# Enable the server
server {
  enabled = true
  bootstrap_expect = {{all_nodes_count}}
}

ports {
  http = 4646
  rpc  = 4647
  serf = 4648
}

client {
  enabled  = true
  network_speed = 10

  options {
    "driver.raw_exec.enable" = "1"
  }

}

consul {
  address = "{{inventory_hostname}}:8500"
}

vault {
  enabled = false
  address = "http://active.vault.service.consul:8200"
  task_token_ttl = "1h"
  create_from_role = "nomad-cluster"
  token = ""
}

